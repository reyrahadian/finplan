@model IEnumerable<NavigationMenuViewModel>

@if (!Model.Any())
{
	return;
}

<ul class="nav flex-column">
	@foreach (var item in Model)
	{
		<li class="nav-item">
			<a class="nav-link" href="@item.Uri">
				<span data-feather="file-text"></span>
				@item.Title
			</a>
		</li>
	}	
</ul>

